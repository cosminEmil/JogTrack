<li>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if current_user.manager? && !current_user?(user) %>
        <%= button_to "delete", user, form: {data: { turbo_confirm: "Are you sure?" }}, method: :delete, class: "delete-button" %>
        <%= link_to "edit", edit_user_path(user), class: "edit-link" %>
    <% end %>
</li>