<li>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if (current_user.manager? || current_user.admin?) && !current_user?(user) %>
        <div class = "d-flex" >
            <%= button_to "delete", user, form: {data: { turbo_confirm: "Are you sure?" }}, method: :delete, class: "btn btn-danger btn-sm delete-button" %>
            <%= link_to "edit", edit_user_path(user), class: "btn btn-primary btn-sm edit-link" %>
        </div>
    <% end %>
</li>