<h2 class="card-title">Add Activity</h2>

<%= form_with(model: activity, local: true, class: 'activity-form') do |f| %>
  <%= render 'shared/error_messages', object: activity %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :distance %>
      <%= f.number_field :distance, step: :any, placeholder: "kilometers", class: 'form-control', id: 'distance-input' %>
    </div>

    <div class="col-md-6">
      <%= f.label :duration, "Duration" %>
      <div class="duration-fields">
        <%= f.number_field :hours, min: 0, placeholder: "hr", class: 'form-control' %>
        <%= f.number_field :minutes, min: 0, max: 60, placeholder: "min", class: 'form-control' %>
        <%= f.number_field :seconds, min: 0, max: 60, placeholder: "s", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :run_at, "Date & Time" %>
    <% current_time = Time.now.strftime("%d/%m/%Y %I:%M %p") %>
    <%= f.datetime_field :run_at, placeholder: current_time, class: 'form-control datetimepicker' %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Afternoon Run", class: 'form-control' %>
    <%= f.label :location %>
    <%= f.text_field :location, placeholder: "Cluj-Napoca", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "How'd it go? Share more about your activity.", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Activity", class: 'btn btn-primary' %>
  </div>
<% end %>
